{
	"name": "monorepo-root",
	"description": "A simple utility to get the monorepo root",
	"version": "2.5.0",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./*": {
			"require": "./dist/*.cjs",
			"import": "./dist/*.mjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {},
	"directories": {
		"es": "es",
		"lib": "lib",
		"src": "src",
		"typings": "typings"
	},
	"dependencies": {
		"workspace-root": "workspace:*"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.34.4",
		"eslint": "^8.38.0",
		"prettier": "^2.8.7"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/core",
				"webpack"
			],
			"allowedVersions": {}
		}
	},
	"keywords": [
		"node-kit",
		"monorepo",
		"lerna-workspace",
		"pnpm-workspace",
		"yarn-workspace",
		"monorepo-root"
	],
	"license": "MIT",
	"author": "saqqdy <https://github.com/saqqdy>",
	"homepage": "https://github.com/saqqdy/node-kit/tree/master/packages/monorepo-root#readme",
	"bugs": {
		"url": "https://github.com/saqqdy/node-kit/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saqqdy/node-kit.git",
		"directory": "packages/monorepo-root"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	}
}
