{
	"name": "@node-kit/pnpm-workspace-root",
	"description": "A simple utility to get the pnpm workspace root",
	"version": "1.0.0-alpha.3",
	"main": "./index.js",
	"module": "./index.mjs",
	"typings": "./index.d.ts",
	"exports": {
		".": {
			"require": "./index.cjs",
			"import": "./index.mjs"
		},
		"./*": "./*"
	},
	"scripts": {},
	"files": [
		"typings",
		"*.js",
		"*.cjs",
		"*.mjs",
		"*.d.ts"
	],
	"directories": {
		"es": "es",
		"lib": "lib",
		"src": "src",
		"typings": "typings"
	},
	"dependencies": {
		"@node-kit/utils": "workspace:*",
		"@pnpm/error": "^4.0.1",
		"find-up": "^6.3.0"
	},
	"devDependencies": {
		"eslint": "^8.31.0",
		"prettier": "^2.8.3"
	},
	"keywords": [
		"node-kit",
		"workspace",
		"pnpm-workspace",
		"workspace-root"
	],
	"license": "MIT",
	"author": "saqqdy <https://github.com/saqqdy>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saqqdy/node-kit.git",
		"directory": "packages/pnpm-workspace-root"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/core",
				"webpack"
			],
			"allowedVersions": {}
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	},
	"bugs": {
		"url": "https://github.com/saqqdy/node-kit/issues"
	},
	"homepage": "https://github.com/saqqdy/node-kit/tree/master/packages/pnpm-workspace-root#readme"
}
